extends ./layout.jade

block head_imports
  script(src='/components/webcomponentsjs/webcomponents.js')
  link(rel='import', href='/components/paper-header-panel/paper-header-panel.html')
  link(rel='import', href='/components/paper-toolbar/paper-toolbar.html')
  link(rel='import', href='/components/paper-tabs/paper-tabs.html')
  link(rel='import', href='/components/iron-form/iron-form.html')
  link(rel='import', href='/components/paper-input/paper-input.html')
  style.
    html,body {
      height: 100%;
      margin: 0;
      background-color: #E5E5E5;
      font-family: 'RobotoDraft', sans-serif;
    }
    core-header-panel {
      height: 100%;
      overflow: auto;
      -webkit-overflow-scrolling: touch; 
    }
    core-toolbar {
      background: #03a9f4;
      color: white;
    }
    #tabs {
      width: 100%;
      margin: 0;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    text-transform: uppercase;
    }
    .container {
      width: 80%;
      margin: 50px auto;
    }
    @media (min-width: 481px) {
      #tabs {
        width: 200px;
      }
      .container {
        width: 400px;
      }
    }

block page_content
  paper-header-panel
    paper-toolbar

      paper-tabs(id='tabs', selected='0')
        paper-tab(name='all') All
        paper-tab(name='favorites') Favorites

    div(class='container', layout, vertical, center)
      iron-form(action='my/form/handler', method='post')
        paper-input(label='Email Address', name='email')
        paper-input(type='file', label='File', name='file')
        paper-input-container
          label Your name
          input(is='iron-input')
        button Submit

block foot_scripts
